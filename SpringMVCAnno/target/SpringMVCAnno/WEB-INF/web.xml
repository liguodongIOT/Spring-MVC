<web-app version="2.4"
	xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee 
	http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">

	<display-name>Spring MVC Application Annocation</display-name>

    <servlet>
		<servlet-name>DispatcherServlet</servlet-name>
		<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>

		<init-param>
			<param-name>contextConfigLocation</param-name>
			<param-value>WEB-INF/spring.xml</param-value>
			<!--<param-value>classpath:spring.xml</param-value>-->
		</init-param>
        <load-on-startup>1</load-on-startup>

	</servlet>

	<servlet-mapping>
		<servlet-name>DispatcherServlet</servlet-name>
		<url-pattern>*.action</url-pattern>
	</servlet-mapping>


	<!--设置首页-->
	<welcome-file-list>
		<!--<welcome-file>/login/User.jsp</welcome-file>-->
		<!--<welcome-file>/login/MultiUser.jsp</welcome-file>-->
		<!--<welcome-file>/login/EmpForm.jsp</welcome-file>-->
		<!--<welcome-file>/login/EmpFormAll.jsp</welcome-file>-->
		<!--<welcome-file>/login/edit.jsp</welcome-file>-->
		<welcome-file>/login/beenToJson.jsp</welcome-file>

	</welcome-file-list>


	<!--编码过滤器 仅限于本项目中的POST方式-->
	<!--注册Spring提供的针对POST请求的中文乱码问题-->
	<filter>
		<filter-name>CharacterEncodingFilter</filter-name>
		<filter-class>org.springframework.web.filter.CharacterEncodingFilter</filter-class>
		<init-param>
			<param-name>encoding</param-name>
			<param-value>UTF-8</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>CharacterEncodingFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>

</web-app>